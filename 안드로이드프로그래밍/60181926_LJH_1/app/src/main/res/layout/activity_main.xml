<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:rowCount="7"
    android:orientation="horizontal">
    <EditText
        android:layout_column="0"
        android:layout_row="0"
        android:id="@+id/edit1"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자1입력" />
    <EditText
        android:layout_column="0"
        android:layout_row="1"
        android:id="@+id/edit2"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자1입력"/>
    <Button
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/plus"
        android:text="+"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/minus"
        android:text="-"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="2"
        android:layout_row="2"
        android:id="@+id/mult"
        android:text="X"
        android:layout_width="80dp"
        />

    <Button
        android:id="@+id/dev"
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="/" />
    <Button
        android:layout_column="0"
        android:layout_row="3"
        android:id="@+id/btn0"
        android:text="0"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="1"
        android:layout_row="3"
        android:id="@+id/btn1"
        android:text="1"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="2"
        android:layout_row="3"
        android:id="@+id/btn2"
        android:text="2"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="3"
        android:layout_row="3"
        android:id="@+id/btn3"
        android:text="3"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="0"
        android:layout_row="4"
        android:id="@+id/btn4"
        android:text="4"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="1"
        android:layout_row="4"
        android:id="@+id/btn5"
        android:text="5"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="2"
        android:layout_row="4"
        android:id="@+id/btn6"
        android:text="6"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="3"
        android:layout_row="4"
        android:id="@+id/btn7"
        android:text="7"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="0"
        android:layout_row="5"
        android:id="@+id/btn8"
        android:text="8"
        android:layout_width="80dp"
        />
    <Button
        android:layout_column="1"
        android:layout_row="5"
        android:id="@+id/btn9"
        android:text="9"
        android:layout_width="80dp"
        />

    <Button
        android:id="@+id/btnp"
        android:layout_width="253dp"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="." />
    <TextView
        android:layout_column="0"
        android:layout_row="6"
        android:id="@+id/textRes"
        android:layout_margin="5dp"
        android:text="계산결과: "
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>


</GridLayout>